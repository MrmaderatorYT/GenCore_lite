<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:textSize="50sp"
        android:id="@+id/title"
        android:layout_centerVertical="true"
        android:text="GenCore Lite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/title"
        android:id="@+id/new_project"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:text="New" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/new_project"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:id="@+id/load_project"
        android:text="Load" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/logo"
        android:src="@drawable/logo_main"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/logo_not_main"
        android:src="@drawable/logo_schematic"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="50sp"
        android:textSize="35sp"
        android:id="@+id/edit_name_pr"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Package name (org.example)"
        android:layout_below="@+id/edit_name_pr"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="50sp"
        android:id="@+id/edit_package_pr"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_package_pr"
        android:hint="Version"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="50sp"
        android:id="@+id/edit_version_pr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textSize="25sp"
        android:id="@+id/create_text"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="50sp"
        android:layout_below="@+id/edit_version_pr"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textSize="25sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp"

        android:id="@+id/return_text"/>





</RelativeLayout>