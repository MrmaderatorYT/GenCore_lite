<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Back to Main'
                size_hint: (None, None)
                size: 100, 50
                pos_hint: {'x': 0, 'top': 1}
                on_release: app.root.current = 'main'

            Slider:
                id: volume_set
                size_hint: (None, None)
                width: 200
                pos_hint: {'center_x': 0.5, 'top': 0.7}
                on_value: root.on_volume_change(*args)
                max: 100
                value: 50

            Label:
                id: settings
                text: 'Settings'
                size_hint: (None, None)
                size: self.texture_size
                pos_hint: {'center_x': 0.5, 'top': 0.9}
                color: 1, 1, 1, 1
                font_size: '30sp'

            Label:
                id: settings_volume
                text: 'Volume Settings'
                size_hint: (None, None)
                size: self.texture_size
                pos_hint: {'center_x': 0.5, 'top': 0.75}
                color: 1, 1, 1, 1
                font_size: '25sp'

            Label:
                id: volume_text
                text: 'Volume: 50%'
                size_hint: (None, None)
                size: self.texture_size
                pos_hint: {'right': 0.85, 'top': 0.7}
                color: 1, 1, 1, 1

            Switch:
                id: switch_anim
                size_hint: (None, None)
                pos_hint: {'center_x': 0.5, 'top': 0.5}
                on_active: root.on_switch_toggle(*args)

            Label:
                id: type_of_anim_text
                text: 'Type of Spawning Animation'
                size_hint: (None, None)
                size: self.texture_size
                pos_hint: {'center_x': 0.5, 'top': 0.6}
                color: 1, 1, 1, 1
                font_size: '25sp'

            Label:
                id: type_anim_value_text
                text: 'Auto'
                size_hint: (None, None)
                size: self.texture_size
                pos_hint: {'right': 0.85, 'top': 0.55}
                color: 1, 1, 1, 1