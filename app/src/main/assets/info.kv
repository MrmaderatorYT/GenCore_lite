<InfoScreen>:
    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                Label:
                    id: info_label  # Переконайтеся, що цей id тут є
                    text: " Mr_maderator_YT - головний кодер, редактор фотографій, сюжет \n Costic Antonii a.k.a ssokeer - QA, сюжет \n amygoxy - робота з фотографіями, тестувальник \n man_humor - тестувальник \n Dalee-3 - створювач картинок (yes)"
                    color: 1, 1, 1, 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: '16sp'
                    text_size: self.width, None
                    valign: 'bottom'
                    halign: 'right'
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1  # чорний фон
                        Rectangle:
                            pos: self.pos
                            size: self.size

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Back to Main'
                size_hint: (None, None)
                size: 100, 50
                pos_hint: {'right': 0.85, 'top': 0.55}
                on_release: app.root.current = 'main'
