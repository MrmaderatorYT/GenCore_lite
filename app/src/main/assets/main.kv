<MainScreen>:
    start_btn: start_btn
    settings_btn: settings_btn
    info_btn: info_btn

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Background color black
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: title
        text: 'Romantic Adventure'
        color: 1, 1, 1, 1  # Text color white
        font_size: '40sp'
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}  # Centered at the top

    Button:
        id: start_btn
        text: 'Start Game'
        background_color: 1, 1, 1, 1  # Background color white
        color: 0, 0, 0, 1  # Text color black
        size_hint: None, None
        width: 200
        height: 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: 5

    Button:
        id: settings_btn
        text: 'Settings'
        background_color: 1, 1, 1, 1  # Background color white
        color: 0, 0, 0, 1  # Text color black
        size_hint: None, None
        width: 200
        height: 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        padding: 5

    Button:
        id: info_btn
        text: 'Info'
        background_color: 1, 1, 1, 1  # Background color white
        color: 0, 0, 0, 1  # Text color black
        size_hint: None, None
        width: 200
        height: 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        padding: 5
