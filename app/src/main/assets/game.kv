<GameScreen>:
    FloatLayout:
        padding: 10
        spacing: 10

        # Block for image
        Image:
            id: image
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1  # Image takes up the whole screen

        # Main text block
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: 150  # Adjust height to be smaller
            pos_hint: {'x': 0, 'y': 0.2}  # Positioned above the text buttons
            padding: 10
            spacing: 10

            # Block for name
            BoxLayout:
                size_hint_y: None
                height: 40
                padding: [0, 0, 10, 0]  # Padding only on the right
                Label:
                    id: name
                    text: ""
                    size_hint_x: None
                    width: self.texture_size[0]
                    font_size: '14sp'
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'

            ScrollView:
                id: content
                size_hint: 1, 1  # Take up remaining vertical space
                do_scroll_x: False
                do_scroll_y: True
                BoxLayout:
                    id: textContainer
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

                    Label:
                        id: text
                        size_hint_y: None
                        height: self.texture_size[1]
                        text_size: self.width, None
                        halign: 'center'
                        valign: 'middle'
                        font_size: '12sp'
                        color: 0, 0, 0, 1
                        markup: True

        # Text buttons at the bottom
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            spacing: 10
            pos_hint: {'bottom': 1}  # Positioned at the bottom

            Label:
                text: "[ref=quick_save]Quick Save[/ref]"
                font_size: '14sp'
                color: 0, 0, 1, 1  # Blue color to indicate clickable text
                markup: True
                on_ref_press: root.quick_save()

            Label:
                text: "[ref=quick_load]Quick Load[/ref]"
                font_size: '14sp'
                color: 0, 0, 1, 1  # Blue color to indicate clickable text
                markup: True
                on_ref_press: root.quick_load()

            Label:
                text: "[ref=history]History[/ref]"
                font_size: '14sp'
                color: 0, 0, 1, 1  # Blue color to indicate clickable text
                markup: True
                on_ref_press: root.show_history()

            Label:
                text: "[ref=menu]Menu[/ref]"
                font_size: '14sp'
                color: 0, 0, 1, 1  # Blue color to indicate clickable text
                markup: True
                on_ref_press: root.go_to_menu()
